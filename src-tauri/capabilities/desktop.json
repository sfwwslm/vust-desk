{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "core:window:allow-destroy",
    "updater:default",
    "dialog:allow-open",
    "window-state:default",
    "autostart:default",
    "autostart:allow-enable",
    "autostart:allow-is-enabled",
    {
      "identifier": "opener:default",
      "allow": [
        { "app": "firefox", "url": "http://*" },
        { "app": "firefox", "url": "https://*" },
        { "app": "msedge", "url": "http://*" },
        { "app": "msedge", "url": "https://*" },
        { "app": "chrome", "url": "http://*" },
        { "app": "chrome", "url": "https://*" }
      ]
    }
  ]
}
