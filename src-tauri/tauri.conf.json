{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vust Desk",
  "version": "0.1.1",
  "identifier": "cc.vust.desk",
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "beforeBuildCommand": "pnpm web:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "category": "Utility",
    "shortDescription": "集导航、资产与同步于一体的高效桌面助手。",
    "longDescription": "Vust Desk 是一款基于 Tauri v2 和 React v19 构建的现代化桌面助手应用。它集成了支持内外网切换的智能导航面板、可视化的资产管理系统以及安全的多端数据同步功能，旨在提供流畅、美观且高效的个人数据管理体验。",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE4Rjc0OERCMUJEMUUxNzIKUldSeTRkRWIyMGozR0RjZVk2V0ZLeEFoUWR6V2dmUGxPeG4xLzdIMWFlaXVTZWt0UnpuTGp0cGQK",
      "endpoints": [
        "https://github.com/sfwwslm/vust-desk/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Vust Desk",
        "width": 1024,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 768,
        "decorations": false,
        "visible": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' asset: http://asset.localhost"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      }
    }
  }
}
